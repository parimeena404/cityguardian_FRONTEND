{
  "name": "cityguardian-backend",
  "version": "1.0.0",
  "description": "Backend API for CityGuardian application with MongoDB and JWT authentication",
  "main": "server.js",
  "scripts": {
    "start": "node database/server.js",
    "dev": "nodemon database/server.js",
    "setup": "node database/setup.js",
    "env-setup": "node config/envSetup.js",
    "test": "jest",
    "test:auth": "jest tests/auth.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "node -e \"console.log('Cleaning up temporary files...'); process.exit(0);\"",
    "build": "echo 'No build step required for Node.js backend'",
    "check-env": "node -e \"require('./config/envSetup').init().then(() => console.log('Environment OK')).catch(e => {console.error(e); process.exit(1);})\""
  },
  "keywords": [
    "cityguardian",
    "mongodb",
    "express",
    "jwt",
    "authentication",
    "api",
    "environmental",
    "reports",
    "tasks"
  ],
  "author": "CityGuardian Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.3",
    "nodemailer": "^6.9.8",
    "socket.io": "^4.7.4",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "node_modules/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}